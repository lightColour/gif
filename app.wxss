 .yoo-flex{
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  flex-wrap: wrap;
  align-items: center;
}

.yoo-flex__item{
  text-align: center;
}

/* 豆腐块 */
.block {
  position: relative;
}

.block .yoo-flex {
  justify-content: left;
}

.block .yoo-icon {
  position: absolute;
  top: 14rpx;
  left: 28rpx;
}
.block > .title {
  height: 60rpx;
  padding: 0 80rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  color: #333;
}
.block image {
  width: 194rpx;
  height: 194rpx;
  border-radius: 16rpx;
}

.block .name {
  margin: 10rpx 0 40rpx;
  color: #888;
}

.block-category .yoo-flex {
  margin: 20rpx 21rpx 0;
}

.block-category .yoo-flex__item {
  width:236rpx;
}
