/* 豆腐块 */
.block {
  padding: 20rpx 0 0;
}
.block > .title {
  height: 60rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  line-height: 60rpx;
}
.block image {
  width: 230rpx;
  height: 230rpx;
  border-radius: 12rpx;
  border: 1rpx solid #eee;
}

.block-hot > .title {
  margin-bottom: 20rpx;
  font-size: 32rpx;
  text-align: center;
}
.block-hot {
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.block-category .weui-flex {
  margin: 0 10rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}
