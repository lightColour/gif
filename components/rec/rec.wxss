.rec-container{
  height:100%;
  width:100%;
}
.rec-top{
  display: flex;
  flex-direction: row;
  margin:10rpx 0rpx;
  height:280rpx;
}
.rec-top image{
  width:100%;  
}
.rec-top-left{
  width:500rpx;
  margin-right: 5rpx;
}
.rec-top-right{
  flex:1;
}
.rec-top-right image{
  float: left;
}
.rec-classify{
  background: #fff;
  display: flex;
  flex-direction: row;
  padding: 40rpx 0rpx;
}
.rec-classify-item{
  flex:1;
  text-align: center;
}
.rec-classify-item image{
  width:120rpx;
  height:120rpx;
  border-radius:120rpx;
}
