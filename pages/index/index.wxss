.page {
  margin: 0;
  font-size: 24rpx;
  color: #757575;
}
swiper {
  width: 750rpx;
  height: 281rpx;
}

.slide-image {
  width: 100%;
}

.yoo-icon {
  display: inline-block;
  width: 34rpx;
  height: 34rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.yoo-icon-list {
  width: 54rpx;
  height: 54rpx;
  background-image: url(data:image/png;base64,);
}

.category {
  height: 110rpx;
  margin-bottom: 16rpx;
  border-bottom: 1rpx solid #ddd;
}

.category .cate-item {
  flex: 1;
  justify-content: center;
  height: 70rpx;
  font-size: 30rpx;
  color: #000;

}

.category .cate-item + .cate-item {
  border-left: 1rpx solid #ddd;
}

.category .title {
  display: inline-block;
  padding-left: 20rpx;
}

.yoo-icon-rec {
  background-image: url(data:image/png;base64,);
}


